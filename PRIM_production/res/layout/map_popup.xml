<?xml version="1.0" encoding="utf-8"?>

<LinearLayout 
    android:gravity="center" 
    android:orientation="horizontal" 
    android:background="@drawable/map_popup" 
    android:paddingLeft="@dimen/pad_10dp" 
    android:paddingRight="@dimen/pad_10dp" 
    android:paddingBottom="@dimen/pad_15dp" 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <ImageView 
        android:id="@+id/imageView1" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:src="@drawable/map_popup_pic" />
    
    <LinearLayout 
        android:orientation="vertical" 
        android:id="@+id/al" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_marginLeft="@dimen/pad_10dp" 
        android:layout_marginRight="@dimen/pad_10dp" 
        android:layout_weight="1.0">
        
        <TextView 
            android:textSize="@dimen/txt_15sp" 
            android:textColor="@color/white" 
            android:gravity="center_vertical" 
            android:id="@+id/title" 
            android:layout_width="wrap_content" 
            android:layout_height="fill_parent" 
            android:text="TextView" />
        
        <TextView 
            android:textSize="@dimen/txt_12sp" 
            android:textColor="@color/main_blue_lt" 
            android:id="@+id/snippet" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:text="TextView TextView \nTextView" />
        
    </LinearLayout>
    <ImageView 
        android:id="@+id/imageView2" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:src="@drawable/arrow_white" />
</LinearLayout>