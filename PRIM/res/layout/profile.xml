<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <LinearLayout 
        android:orientation="vertical" 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent">
        
        <LinearLayout 
            android:gravity="center" 
            android:orientation="vertical" 
            android:background="@drawable/pro_bg" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content">
            
            <TextView
                 android:textSize="@dimen/txt_16sp" 
                 android:textColor="@color/white" 
                 android:id="@id/textView1" 
                 android:layout_width="wrap_content" 
                 android:layout_height="wrap_content" 
                 android:text="Martin Bbaale" 
                 android:drawableTop="@drawable/ic_contact_picture" 
                 android:drawablePadding="@dimen/pad_10dp" />
            
            <TextView 
                android:textSize="@dimen/txt_12sp" 
                android:textColor="@color/side_menu_divider" 
                android:id="@id/textView1" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:text="bmm@gmail.com" />
            
            <TextView 
                android:textSize="@dimen/txt_12sp" 
                android:textColor="@color/side_menu_divider" 
                android:id="@id/textView1" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                android:text="27/09/1982" />
        </LinearLayout>
        
        <LinearLayout 
            android:orientation="vertical" 
            android:padding="@dimen/pad_10dp" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content">
            
            <LinearLayout 
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content" 
                android:layout_marginBottom="@dimen/pad_10dp">
                
                <TextView 
                    android:id="@+id/textView2" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:text="Email" 
                    android:layout_weight="1.0" 
                    style="@style/profile_lbl1" />
                
                <TextView 
                    android:id="@+id/textView3" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:text="bmm@gmail.com" 
                    style="@style/profile_lbl2" />
                
            </LinearLayout>
            
            <LinearLayout 
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content" 
                android:layout_marginBottom="@dimen/pad_10dp">
                
                <TextView 
                    android:id="@+id/textView4" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:text="Username" 
                    android:layout_weight="1.0" 
                    style="@style/profile_lbl1" />
                
                <TextView 
                    android:id="@+id/textView5" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:text="bmm" 
                    style="@style/profile_lbl2" />
                
            </LinearLayout>
            
            <LinearLayout 
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content" 
                android:layout_marginBottom="@dimen/pad_10dp">
                
                <TextView 
                    android:id="@+id/textView6" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:text="Name" 
                    android:layout_weight="1.0"
                    style="@style/profile_lbl1" />
                
                <TextView 
                    android:id="@+id/textView7" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:text="Martin" 
                    style="@style/profile_lbl2" />
                
            </LinearLayout>
            
            <LinearLayout 
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content" 
                android:layout_marginBottom="@dimen/pad_10dp">
                
                <TextView 
                    android:id="@+id/textView8" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:text="Surname" 
                    android:layout_weight="1.0" 
                    style="@style/profile_lbl1" />
                
                <TextView 
                    android:id="@+id/textView9" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:text="Bbaale" 
                    style="@style/profile_lbl2" />
                
            </LinearLayout>
            
            <LinearLayout 
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content" 
                android:layout_marginBottom="@dimen/pad_10dp">
                
                <TextView 
                    android:id="@+id/textView10" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:text="City" 
                    android:layout_weight="1.0" 
                    style="@style/profile_lbl1" />
                
                <TextView 
                    android:id="@+id/textView11" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:text="Kampala" 
                    style="@style/profile_lbl2" />
                
            </LinearLayout>
            
            <LinearLayout 
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content" 
                android:layout_marginBottom="@dimen/pad_10dp">
                
                <TextView 
                    android:id="@+id/textView12" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:text="Sex" 
                    android:layout_weight="1.0" 
                    style="@style/profile_lbl1" />
                
                <TextView 
                    android:id="@+id/textView13" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:text="Male" 
                    style="@style/profile_lbl2" />
            </LinearLayout>
            
            <LinearLayout 
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content" 
                android:layout_marginBottom="@dimen/pad_10dp">                
                <TextView 
                    android:id="@+id/textView14" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:text="Birth Date" 
                    android:layout_weight="1.0" 
                    style="@style/profile_lbl1" />                
                <TextView 
                    android:gravity="center" 
                    android:id="@+id/textView15" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:text="27/09/1970" 
                    android:drawableLeft="@drawable/icon_calender" 
                    android:drawablePadding="@dimen/pad_10dp" 
                    style="@style/profile_lbl2" />                
            </LinearLayout>
            
        </LinearLayout>
    </LinearLayout>
</ScrollView>