<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    android:id="@+id/scr" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <LinearLayout 
        android:orientation="vertical" 
        android:background="@color/white" 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent">
        
        <RelativeLayout 
            android:background="@drawable/card_img" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content">
            
            <LinearLayout 
                android:gravity="bottom" 
                android:orientation="vertical" 
                android:background="@drawable/card_img_shadow" 
                android:padding="@dimen/pad_10dp" 
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content" 
                android:layout_alignParentBottom="true">
                
                <TextView 
                    android:textSize="@dimen/txt_14sp" 
                    android:textStyle="bold" 
                    android:textColor="@color/white" 
                    android:id="@+id/textView1" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:text="Superba Food" />
                
                <TextView 
                    android:textSize="@dimen/txt_12sp" 
                    android:textColor="@color/white" 
                    android:id="@+id/textView2" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:layout_marginTop="@dimen/pad_3dp" 
                    android:layout_marginBottom="@dimen/pad_3dp" 
                    android:text="Restaurant Food" />
                
                <TextView 
                    android:textSize="@dimen/txt_12sp" 
                    android:textColor="@color/white" 
                    android:gravity="center" 
                    android:id="@+id/textView3" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:text="1900 S Lincoln Blvd, Venice, Los Angeles" 
                    android:drawableLeft="@drawable/card_img_map_icon" 
                    android:drawablePadding="@dimen/pad_3dp" />
            </LinearLayout>
            
        </RelativeLayout>
        
        <LinearLayout 
            android:gravity="center_vertical" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content">
            
            <ImageView 
                android:id="@+id/imageView1" 
                android:layout_width="0.0dip" 
                android:layout_height="wrap_content" 
                android:src="@drawable/car_map_thumbnail"                 
                android:scaleType="fitXY" 
                android:layout_weight="1.0" />
            
            <View 
                android:id="@+id/view1" 
                android:background="@color/main_grey_lt" 
                android:layout_width="@dimen/divider" 
                android:layout_height="fill_parent" />
            
            <LinearLayout 
                android:gravity="center" 
                android:orientation="vertical" 
                android:layout_width="0.0dip" 
                android:layout_height="wrap_content" 
                android:layout_weight="1.0">
                
                <TextView 
                    android:textSize="@dimen/txt_14sp" 
                    android:textStyle="bold" 
                    android:textColor="@color/side_menu_divider" 
                    android:id="@+id/textView4" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:text="Phone" />
                
                <TextView
                     android:textSize="@dimen/txt_14sp" 
                     android:textColor="@color/main_grey_dk" 
                     android:textColorLink="@color/main_grey_dk" 
                     android:autoLink="phone" 
                     android:id="@+id/textView5" 
                     android:layout_width="wrap_content" 
                     android:layout_height="wrap_content" 
                     android:text="310-907-5075" />
            </LinearLayout>
            
            <View
                 android:id="@+id/view6" 
                 android:background="@color/main_grey_lt" 
                 android:layout_width="@dimen/divider" 
                 android:layout_height="fill_parent" />
            
            <LinearLayout 
                android:gravity="center" 
                android:orientation="vertical" 
                android:layout_width="0.0dip" 
                android:layout_height="wrap_content" 
                android:layout_weight="1.0">
                
                <TextView 
                    android:textSize="@dimen/txt_14sp" 
                    android:textStyle="bold" 
                    android:textColor="@color/side_menu_divider" 
                    android:id="@+id/textView7" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:text="Expensive" />
                
                <LinearLayout 
                    android:orientation="horizontal" 
                    android:id="@+id/rating" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content">
                    
                    <TextView 
                        android:textColor="@color/main_red" 
                        android:id="@+id/r1" 
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content" 
                        android:text="$" 
                        style="@style/lbl_list_gray" />
                    
                    <TextView 
                         android:textColor="@color/main_red"
                         android:id="@+id/r2" 
                         android:layout_width="wrap_content" 
                         android:layout_height="wrap_content" 
                         android:text="$" 
                         style="@style/lbl_list_gray" />
                    
                    <TextView 
                        android:textColor="@color/main_red" 
                        android:id="@+id/r3" 
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content" 
                        android:text="$" style="@style/lbl_list_gray" />
                    
                    <TextView 
                        android:id="@+id/r4" 
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content" 
                        android:text="$" 
                        style="@style/lbl_list_gray" />
                    
                    <TextView 
                        android:id="@+id/r5" 
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content" 
                        android:text="$" 
                        style="@style/lbl_list_gray" />
                    
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View 
            android:id="@+id/view8" 
            android:background="@color/main_grey_lt" 
            android:layout_width="fill_parent" 
            android:layout_height="@dimen/divider" />
        
        <TextView 
            android:textSize="@dimen/txt_14sp" 
            android:textColor="@color/side_menu_divider" 
            android:id="@+id/textView9" 
            android:padding="@dimen/pad_10dp" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:text="@string/detail_temp" />
        
        <LinearLayout 
            android:gravity="center_vertical" 
            android:orientation="horizontal" 
            android:padding="@dimen/pad_10dp" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content">
            
            <LinearLayout 
                android:orientation="vertical" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:layout_weight="1.0">
                
                <TextView 
                    android:textSize="@dimen/txt_14sp" 
                    android:textColor="@color/side_menu_divider" 
                    android:id="@+id/textView10" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:text="Website:" />
                
                <TextView 
                    android:textSize="@dimen/txt_14sp" 
                    android:textColor="@color/main_red" 
                    android:textColorLink="@color/main_red" 
                    android:autoLink="all" 
                    android:id="@+id/textView11" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:text="www.superfood.com" />
            </LinearLayout>
            <ImageView
                 android:id="@+id/imageView2" 
                 android:layout_width="wrap_content"                  
                 android:layout_height="wrap_content" 
                 android:src="@drawable/icon_facebook" />
            
            <ImageView 
                android:id="@+id/imageView12"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:layout_marginLeft="@dimen/pad_20dp" 
                android:layout_marginRight="@dimen/pad_20dp" 
                android:src="@drawable/icon_twitter" />
            
            <ImageView 
                android:id="@+id/imageView13" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:src="@drawable/icon_gplus" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>